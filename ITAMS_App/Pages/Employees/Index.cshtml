@page
@model ITAMS_App.Pages.Employees.IndexModel
@{
    ViewData["Title"] = "Employees";
}

<h2>Employees</h2>

<a class="btn btn-primary" asp-page="Create">Create</a>

<table class="table mt-3">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Department</th>
            <th>Assigned Asset</th>
            <th>Role</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var employee in Model.Employees)
    {
        <tr>
            <td>@employee.FirstName</td>
            <td>@employee.LastName</td>
            <td>@employee.Email</td>
            <td>@employee.Department</td>
            <td>@employee.AssignedAsset?.Asset_Name</td>
            <td>@employee.Role</td>
            <td>
                <a asp-page="Edit" asp-route-id="@employee.Employee_Id">Edit</a> |
                <a asp-page="Details" asp-route-id="@employee.Employee_Id">Details</a> |
                <a asp-page="Delete" asp-route-id="@employee.Employee_Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>