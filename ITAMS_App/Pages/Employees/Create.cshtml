@page
@model ITAMS_App.Pages.Employees.CreateModel
@{
    ViewData["Title"] = "Create Employee";
}

<h2>Create Employee</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Employee.FirstName" class="control-label"></label>
        <input asp-for="Employee.FirstName" class="form-control" />
        <span asp-validation-for="Employee.FirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Employee.LastName" class="control-label"></label>
        <input asp-for="Employee.LastName" class="form-control" />
        <span asp-validation-for="Employee.LastName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Employee.Email" class="control-label"></label>
        <input asp-for="Employee.Email" class="form-control" />
        <span asp-validation-for="Employee.Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Employee.Department" class="control-label"></label>
        <input asp-for="Employee.Department" class="form-control" />
        <span asp-validation-for="Employee.Department" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Employee.Assigned_Asset_Id" class="control-label">Assigned Asset</label>
        <select asp-for="Employee.Assigned_Asset_Id" class="form-control" asp-items="Model.AssetList"></select>
        <span asp-validation-for="Employee.Assigned_Asset_Id" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Employee.Role" class="control-label"></label>
        <select asp-for="Employee.Role" class="form-control" asp-items="Model.RoleList"></select>
        <span asp-validation-for="Employee.Role" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>

<a class="btn btn-secondary mt-3" href="@Url.Page("./Index")">Back to List</a>
