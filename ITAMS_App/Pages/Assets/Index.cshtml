@page
@model ITAMS_App.Pages.Assets.IndexModel

@{
    ViewData["Title"] = "Assets List";
}

<h1 class="mb-4">Assets</h1>

<p>
    <a asp-page="/Assets/Create" class="btn btn-primary mb-3">Create New Asset</a>
</p>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Asset[0].Asset_Type)</th>
            <th>@Html.DisplayNameFor(model => model.Asset[0].Serial_Number)</th>
            <th>@Html.DisplayNameFor(model => model.Asset[0].Purchase_Date)</th>
            <th>@Html.DisplayNameFor(model => model.Asset[0].Status)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Asset)
        {
            <tr>
                <td>@item.Asset_Type</td>
                <td>@item.Serial_Number</td>
                <td>@item.Purchase_Date.ToShortDateString()</td>
                <td>@item.Status</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Asset_Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-page="./Details" asp-route-id="@item.Asset_Id" class="btn btn-sm btn-info">Details</a>
                    <a asp-page="./Delete" asp-route-id="@item.Asset_Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

